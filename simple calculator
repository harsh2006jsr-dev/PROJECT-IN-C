#include<stdio.h>
int main()
{
    float num1, num2, result;
    char operator;
    printf("Simple Calculator made by harsh\n");
    printf("Choose the Operator(+,-,*,/): ");
    scanf("%c", &operator);
    printf("Enter the first number: ");
    scanf("%f", &num1);
    printf("Enter the second number: ");
    scanf("%f", &num2);
        switch(operator)
        {
            case '+':
                result = num1 + num2;
                printf("RESULT: %.2F\n", result);
                break;
            case '-':
                result =num1 -num2;
                printf("RESULT:%.2f\n",result);
                break;
            case '*':
                result = num1 * num2;
                printf("RESULT:%.2f\n",result);
                break;
            case '/':
                result = num1 / num2;
                printf("RESULT:%.2F\n", result);
                break;
            default:
                printf("INVALID OPERATOR! PLEASE RUN IT AGAIN!\n");
                break;
        }
        return 0;
    }
